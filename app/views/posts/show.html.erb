<div class="container">
	<div class="row">
		<div class="col s12 center-align z-depth-3 post-home">
			<div class="col s12 left-align"><h5><%= @post.name %>:&nbsp;</h5><h5><%= @post.title %></h5></div>
			<div class="col s12 center-align post-image">
			<img class="materialboxed" src="<%= @post.photo.url(:large) %>">
			</div>
			<div class="col s12">
				<p class="left-align"><%= @post.content %></p>
				<hr>
			</div>
			<div class="col s12">
				<p class="left-align">Tags: <%= join_tags(@post) %></p>
			</div> 
			
			<div class="col s12">
				<h6 class="left-align">Сэтгэгдэл үлдээх:</h6 class="left-align">
				<%= render "comments/form" %>
			</div>
			<%= render @post.comments %>
		</div>
	</div>
</div>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %> |