<div class="container">
  <div class="row">
  <div class="col s12 z-depth-3">
      <h4>Search posts</h4>

      <%= form_tag("/posts/search", method: "get") do %>
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
      <% end %>

      <table border=1 class="striped">
        <tr>
          <th>Title</th>
          <th>Content</th>
        </tr>

        <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.content %></td>
        </tr>
        <% end %>

        <% @comments.each do |comment| %>
        <tr>
          <td><%= link_to comment.commenter, post_path(comment.post_id) %></td>
          <td><%= comment.body %></td>
        </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>
