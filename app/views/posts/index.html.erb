<% @posts.each do |post| %>
<div class="container">
  <div class="row">
    <div class="col s12 m12 l12 center-align">
      <div class="col s12 left-align"><h5><%= post.name %>:&nbsp;</h5><h5><%= post.title %></h5></div>
      <!-- <div class="col s4 right-align"><%= post.user.email %></div> -->
      <div class="col s12 center-align post-image">
        <img class="materialboxed" src="<%= post.photo.url(:large) %>">
      </div>
      <div class="col s12 right-align">
        <% if post.user == current_user %>
        <%= link_to 'Засварлах', edit_post_path(post),:class => "waves-effect waves-light btn blue" %>
        <%= link_to 'Устгах', post, method: :delete, data: { confirm: 'Та итгэлтэй байна уу?' } ,:class => "waves-effect waves-light btn red"%>
        <% end %>
        <%= link_to 'Дэлгэрэнгүй...', post,:class => "waves-effect waves-light btn" %>
      </div>
     
    </div>
  </div>
</div>
<% end %>