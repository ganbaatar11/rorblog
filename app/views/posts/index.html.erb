<%= link_to 'Шинэ Пост', new_post_path, :class => "btn-floating btn-large waves-effect waves-light red" %>

<% @posts.each do |post| %>
<div class="container">
  <div class="row">
    <div class="col s12 m12 l12 center-align">
      <span><h5><%= post.name %></h5><h5><%= post.title %></h5></span>
      <div class="row center-align">
        <img class="materialboxed" src="<%= post.photo.url(:medium) %>">
      </div>  
      <div class="col s3"><%= link_to 'Засварлах', edit_post_path(post),:class => "btn-flat" %></div>
      <div class="col s3"><%= link_to 'Устгах', post, method: :delete, data: { confirm: 'Та итгэлтэй байна уу?' } ,:class => "btn-flat"%></div>
      <div class="col s6"><%= link_to 'Дэлгэрэнгүй...', post,:class => "btn-flat" %></div>
    </div>
  </div>
</div>
<% end %>